/* pages/sourceList.wxss */
/*图片  */
.section-img{
	background-color: #fff;
}
.section-img image{
	width: 100%;
	height: 400rpx;
}
.section-bd{
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
}
/*说明  */
.section-info{
	width: 100%;
	margin-bottom: 20rpx;
	background-color: #fff;
}
.section-hd,.section-bd{
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
}
.section-hd{
	border-bottom: 1rpx solid #eee;
}
.section-hd image,.section-bd image{
	width: 28rpx;
	height: 28rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}
.section-bd{
	color: #666;
}
/*底部  */
.section-foot{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	display: flex;
	flex-direction: row;
	background-color: #fff;
	position: fixed;
	bottom: 0;
	left: 0;
}
.section-l{
	width: 70%;
	box-sizing: border-box;
	padding-left: 20rpx;
}
.section-r{
	flex: 1;
	height: 100rpx;
	box-sizing: border-box;
	background-color: #f56839;
	text-align: center;
}
.section-r image{
	width: 62rpx;
	height: 62rpx;
	vertical-align: middle;
}