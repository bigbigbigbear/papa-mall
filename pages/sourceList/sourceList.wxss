/*分类  */
.tab {
    display: flex;
    flex-direction: column;
}
.tab-nav {
    height: 80rpx;
    background: #fff;
    border-bottom: 0.5rpx dotted #ddd;
    display: flex;
    line-height: 79rpx;
    position: relative;
}
.tab-item{
	min-width:25%;
	max-width:25%;
	text-align:center;
	height: 88rpx;
	background-color: #fff;
}
.tab-line {
    position: absolute;
    left: 0;
    bottom: -1rpx;
    height: 4rpx;
    background: #f7982a;
    transition: all 0.3s;
}
.tab-content {
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
}
/*品牌  */
.source-wrap,.brands-wrap{
	width: 100%;
	box-sizing: border-box;
	padding: 0 10rpx;
}
.brands-wrap{
	padding-top:10rpx;
}
.items-source,.items-brands{
	width: 100%;
	display: flex;
	flex-flow: row wrap;
	align-content: flex-start;
}
.item-brands{
	box-sizing: border-box;
	flex: 0 0 25%;
}
.item-tag{
	width: 80%;
	height: 50rpx;
	line-height: 50rpx;
	margin:  10rpx;
	background-color: #fff;
	box-sizing: border-box;
	text-align: center;
	color: #666;
	border-radius: 50rpx;
}
.item-tag.active{
	background-color: #ccc;
	color: #666;
}
/*列表  */

.item-source{
	box-sizing: border-box;
	flex: 0 0 50%;
	height: 480rpx;
	background-color: #fff;
	padding: 20rpx;
	border: 10rpx solid #eee;
}
.source-img{
	width: 100%;
	height: 280rpx;
}
.source-banner{
	padding: 4rpx 8rpx;
	background-color: #f56839;
	border-radius: 8rpx;
	color: #fff;
	font-size: 24rpx;
}
.source-name{
	margin-top: 12rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.section-title{
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color: #999;
}
