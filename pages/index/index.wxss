/**index.wxss**/
/*header信息  */
.container{
	background-color: #eee;
}
swiper{
	height: 350rpx;
}
.slide-image{
	width: 100%;
	height: 350rpx;
}
/*列表  */
.popup__content {
    width: 100%;
    max-height: 600rpx;
    background: #fff;
	overflow-y: scroll;
}
.item{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	box-sizing: border-box;
	background: #fff;
	text-indent: 20rpx;
	border-bottom: 1rpx solid #ddd;
}
/*介绍  */
.section-info{
	width: 100%;
	margin-top: 20rpx;
	background-color: #fff;
}
.section-hd,.section-bd{
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
}
.section-hd{
	position: relative;
	text-indent: 16rpx;
	border-bottom: 1rpx solid #eee;
}
.section-hd__title::before{
	content: '';
	width: 6rpx;
	height: 30rpx;
	background-color: #f56839;
	position: absolute;
	left: 20rpx;
	top: 50%;
	transform: translateY(-50%);
}
.co-item{
	width: 100%;
	display: flex;
	box-sizing: border-box;
	flex-wrap: nowrap;
	justify-content: space-between;
	align-items: center;
	padding: 10rpx 0;
	border-bottom: 1rpx solid #eee;
}
.co-item__l{
	width: 25%;
	height: 160rpx;
	box-sizing: border-box;
	padding: 20rpx;
	margin-right: 20rpx;
	overflow: hidden;
}
.co-item__l image{
	width: 100%;
}
.co-item__r{
	flex: 1;
}