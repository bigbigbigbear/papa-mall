/**index.wxss**/
/*分类区域  */
.container{
	background-color: #eee;
}
.slide-image{
	width: 100%;
	height: 325rpx;
}
.items-cate{
	width: 100%;
	height: 220rpx;
	white-space: nowrap;
	box-sizing: border-box;
	background-color: #fff;
	font-size: 24rpx;
}
.item{
	width: 25%;
	display: inline-block;
	text-align: center;
	padding-top: 50rpx; 
}
.item-img{
	width: 80rpx;
	height: 80rpx;
	margin-bottom: 20rpx;
}
/*资源推荐  */
.source-wrap{
	width: 100%;
	box-sizing: border-box;
	padding: 0 10rpx;
}
.section-title{
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color: #999;
}
.items-source{
	width: 100%;
	display: flex;
	flex-flow: row wrap;
	align-content: flex-start;
}
.item-source{
	box-sizing: border-box;
	flex: 0 0 50%;
	height: 360rppx;
	background-color: #fff;
	padding: 20rpx;
	border: 10rpx solid #eee;
}
.source-img{
	width: 100%;
	height: 300rpx;
}
.source-banner{
	padding: 4rpx 8rpx;
	background-color: #f56839;
	border-radius: 8rpx;
	color: #fff;
	font-size: 24rpx;
}
.source-name{
	margin-top: 12rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}