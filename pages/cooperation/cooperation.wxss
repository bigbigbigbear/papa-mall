/**index.wxss**/
/*header信息  */
.container{
	background-color: #eee;
}
.section{
	width: 100%;
	display: flex;
	flex-direction: row;
	box-sizing: border-box;
	padding: 20rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
}
.section-l{
	width: 108rpx;
	margin-right: 20rpx; 
}
.section-r{
	flex: 1;
	line-height: 50rpx;
	position: relative;
}
.section-l image{
	width: 108rpx;
	height: 108rpx;
}
.section-r__tag text{
	background-color: #f56839;
	padding: 4rpx 8rpx;
	margin-right: 20rpx;
	border-radius: 8rpx;
	color: #fff;
}
.icon{
	width: 18rpx;
	height: 32rpx;
	position: absolute;
	right: 20rpx;
	top: 55rpx;
}
/*列表  */
.popup__content {
    width: 100%;
    max-height: 600rpx;
    background: #fff;
	overflow-y: scroll;
  }
.item{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	box-sizing: border-box;
	background: #fff;
	text-indent: 20rpx;
	border-bottom: 1rpx solid #ddd;
}
/*介绍  */
.section-info{
	width: 100%;
	margin-bottom: 20rpx;
	background-color: #fff;
}
.section-hd,.section-bd{
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
}
.section-hd{
	border-bottom: 1rpx solid #eee;
}
.section-hd image,.section-bd image{
	width: 28rpx;
	height: 28rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}
.section-bd{
	color: #666;
}