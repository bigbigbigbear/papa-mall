<!--index.wxml-->
<view class="container">
	<view class="section section-logo">
		<view class="section__img">
			<image class='img img-logo' mode="{{mode}}" src="{{src}}"></image>
		</view>
		<view class="section__title">
			<text>啪啪运动资源商城</text>
		</view>
	</view>
    <view class="page-form">
        <view class="section section-form">
			<image class='img form-input__bg' src="../../assets/images/icon-phone.png"></image>
            <input id="user_phone" class="form-input" type="number" name="user_phone" placeholder="手机号" maxlength="11" bindinput="inputPhone"/>
        </view>
		<view class="section section-form">
			<image class='img form-input__bg' src="../../assets/images/icon-user.png"></image>
            <input id="user_password" class="form-input" type="text" name="user_password" placeholder="密码" bindinput="inputPassword"/>
        </view>
        <view class="section section-form">
            <button hover-class="none" class='form-btn' bindtap="userLogin">登录</button>
        </view>
    </view>
	<view class='section section-bottom' bindtap='goSignup'>
		<text>快速注册</text>
	</view>
</view>