/*表单样式  */
/*logo  */
.section-logo{
	width: 100%;
	padding-top: 32rpx;
	padding-bottom: 100rpx;
	text-align: center;
}
.section__title{
	margin-top: 36rpx;
	font-size: 36rpx;
}
.img-logo{
	width:  216rpx;
	height: 216rpx;
}
/*表单  */
.page-form, .form-input,.form-btn{
	box-sizing: border-box;
}
.page-form{
	width: 100%;
	padding: 0 30rpx;
}
.section-form{
	position: relative;
}
.form-input__bg{
	width: 30rpx;
	height: 34rpx;
	position: absolute;
	left: 24rpx;
	top: 50%;
	transform: translateY(-50%);
}
.form-input{
	width: 100%;
	height: 90rpx;
	padding-left: 72rpx;
	margin-bottom: 20rpx;
	border: 1rpx solid #d7d7d7;
	border-radius: 8rpx;
}
.form-btn{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	background-color: #f56839;
	border: 1rpx solid #f56839;
	border-radius: 90rpx;
	font-size: 34rpx;
	color: #fff;
	margin-top: 60rpx;
}
/*底部链接  */
.section-bottom{
	color: #00ccff;
	text-align: center;
}